<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DCS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom fixed-top box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/">Home</a>
                        </li>
                        @if (Session["email"] != null && Session["actype"] == "business")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/Business/">Corporate</a>
                            </li>
                        }
                        else 
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/home/blogin">Corporate</a>
                            </li>
                        }


                        <li class="nav-item">
                            <a class="nav-link text-light" href="/home/about">About</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav" style="float:right !important">
                        @if (Session["email"] != null && Session["actype"] == "employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" href="">@Html.ActionLink("Account", "Index", "Account", new { @style = "text-decoration:none;" }, new { @class = "nav-link" })</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="">@Html.ActionLink("Logout", "Logout", "Home", new { @style = "text-decoration:none;color:white;" }, new { @class = "nav-link" })</a>
                            </li>
                        }

                        else if (Session["email"] != null && Session["actype"] == "business")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" href="">@Html.ActionLink("Account", "Index", "Business", new { @style = "text-decoration:none;" }, new { @class = "nav-link" })</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="">@Html.ActionLink("Logout", "Logout", "Home", new { @style = "text-decoration:none;color:white;" }, new { @class = "nav-link" })</a>
                            </li>
                        }

                        else
                        {
                            <li class="nav-item" style="margin-right:15px">
                                <a class="nav-link text-light">@Html.ActionLink("SignUp", "SignUp", "Home", new { @style = "text-decoration:none;color:white;" }, new { @class = "nav-link" })</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light">@Html.ActionLink("LogIn", "Login", "Home", new { @style = "text-decoration:none;color:white;" }, new { @class = "nav-link" })</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container body-content" style="margin-top:30px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developer Community System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
