@model DCS_new.Models.task
@{
    ViewBag.Title = "addtasks";
}

<h2>Add Tasks</h2>

@using (Html.BeginForm())
    {
        <div class="container">
            <div class="form-group">
                <label>Select employee:</label>
                @Html.DropDownListFor(m => m.e_id, new SelectList(ViewBag.namelist, "e_id", "name"), "--select employee--", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.e_id, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Enter task description(100 characters):</label>
                <br />
                @Html.TextAreaFor(m => m.task_desc, new { rows = 4, cols = 60, maxlength = 100 })
                <br />
                @Html.ValidationMessageFor(x => x.task_desc, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    Add Task
                </button>
            </div>
        </div>
    }

