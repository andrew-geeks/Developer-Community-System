@model DCS_new.Models.BusinessModel

@{
    ViewData["Title"] = "Change Password";
}


<h3>Change Password</h3>
<br />
@using (Html.BeginForm())
{
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h5 class="mb-0">Change Password</h5>
        </div>
        <div class="card-body">
            <form class="form" role="form" autocomplete="off">
                <div class="form-group">
                    <label for="inputPasswordNew">New Password</label>
                    @Html.PasswordFor(x => x.password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="inputPasswordNewVerify">Confirm New Password</label>
                    @Html.PasswordFor(x => x.cpassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.cpassword, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg float-right">Save</button>
                </div>
            </form>
        </div>
    </div>
}